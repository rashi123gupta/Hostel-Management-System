rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function getRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    function isAdmin() {
      return getRole(request.auth.uid) in ['warden', 'superuser'];
    }

    // -------------------------
    // USERS COLLECTION
    // -------------------------
    match /users/{userId} {

      // Everyone logged in can read users
      allow read: if request.auth != null;

      // Only user can create their own doc
      allow create: if request.auth != null && request.auth.uid == userId;

      // User updating own profile (but NOT deviceTokens)
      allow update: if request.auth != null
                 && request.auth.uid == userId
                 && !("deviceTokens" in request.resource.data.diff().changedKeys());

      // User can update ONLY their deviceTokens
      allow update: if request.auth != null
                 && request.auth.uid == userId
                 && request.resource.data.deviceTokens is list
                 && request.resource.data.keys().hasOnly(["deviceTokens"]);

      // Admins can update anything EXCEPT deviceTokens
      allow update: if isAdmin()
                 && !("deviceTokens" in request.resource.data.diff().changedKeys());
    }


    // -------------------------
    // LEAVES COLLECTION
    // -------------------------
    match /leaves/{leaveId} {

      // Student can read their own leaves; warden can read all
      allow read: if request.auth.uid == resource.data.studentId
                  || getRole(request.auth.uid) == 'warden';

      // Students create their own leave
      allow create: if getRole(request.auth.uid) == 'student'
                    && request.resource.data.studentId == request.auth.uid;

      // Warden updates leave (approve/reject)
      allow update: if getRole(request.auth.uid) == 'warden';

      allow delete: if false;
    }


    // -------------------------
    // COMPLAINTS COLLECTION
    // -------------------------
    match /complaints/{complaintId} {

      // Student can read own complaint; warden reads all
      allow read: if request.auth.uid == resource.data.studentId
                  || getRole(request.auth.uid) == 'warden';

      // Students create complaints for themselves
      allow create: if getRole(request.auth.uid) == 'student'
                    && request.resource.data.studentId == request.auth.uid;

      // Warden updates complaint resolution
      allow update: if getRole(request.auth.uid) == 'warden';

      allow delete: if false;
    }
  }
}
